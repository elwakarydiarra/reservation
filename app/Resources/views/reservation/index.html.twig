{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto bg-dark mt-5 shadow p-3 mb-5 bg-white rounded">
    <h1>Reservations list</h1>

    <table class="table table-striped table-dark w-50 mx-auto shadow p-3 mb-5 rounded">
        <thead class="bg-info">
            <tr>
                <th class="text-center">Id</th>
                <th class="center">Date</th>
                <th class="center">Horaire</th>
                <th class="center">Promo</th>
                <th class="center">Formateur</th>
                <th class="center">Salle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td><a href="{{ path('reservation_show', { 'id': reservation.id }) }}">{{ reservation.id }}</a></td>
                <td>{% if reservation.date %}{{ reservation.date|date('Y-m-d') }}{% endif %}</td>

                    {% if reservation.horaire %}
                <td> matin </td>
                {% else %}
                <td> soir</td>
                {% endif %}
                <td>{{ reservation.promo }}</td>
                <td>{{ reservation.formateur }}</td>
                <td>{{ reservation.salle }}</td>
                <td>
                    <ul class="nav">
                        <li class="nav-items">
                            <a class="mr-5 btn btn-sm btn-success " href="{{ path('reservation_show', { 'id': reservation.id }) }}">show</a>
                        </li>
                        <li class="nav-items">
                            <a class="mt-2 btn btn-sm btn-success" href="{{ path('reservation_edit', { 'id': reservation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="nav">
        <li class="nav-items">
            <a class="nav-link text-white btn btn-sm btn-dark" href="{{ path('reservation_new') }}">Create a new reservation</a>
        </li>
    </ul>
</div>
{% endblock %}
