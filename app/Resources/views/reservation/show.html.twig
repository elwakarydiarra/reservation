{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto bg-dark mt-5 shadow p-3 mb-5 bg-white rounded">
    <h1>Bonjour {{ reservation.formateur }}!</h1>
    <h2>Voici votre reservation</h2>


    <table class="table table-striped table-dark w-50 mx-auto shadow p-3 mb-5 rounded">
        <tbody>

            <tr>
                <th class="text-center">Date</th>
                <td>{% if reservation.date %}{{ reservation.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th class="text-center">Horaire</th>

                {% if reservation.horaire %}
                <td> matin </td>
                {% else %}
                <td> soir</td>
                {% endif %}
            </tr>
            <tr>
                <th class="text-center">Promo</th>
                <td>{{ reservation.promo }}</td>
            </tr>

            <tr>
                <th class="text-center">Salle</th>
                <td>{{ reservation.salle }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="nav">
        <li class="nav-items">
            <a class="mr-5 btn btn-sm btn-success " href="{{ path('reservation_index') }}">Back to the list</a>
        </li>
        <li class="nav-items">
            <a class="mr-5 btn btn-sm btn-success " href="{{ path('reservation_edit', { 'id': reservation.id }) }}">Edit</a>
        </li>
        <li class="nav-items">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
