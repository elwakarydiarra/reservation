{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 bg-info">
    <h1>Promos list</h1>

    <table class="table table-striped table-dark w-50 mx-auto shadow p-3 mb-5 rounded">
        <thead class="bg-success mt-2">
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Nbeleve</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td><a href="{{ path('promo_show', { 'id': promo.id }) }}">{{ promo.id }}</a></td>
                <td>{{ promo.nbEleve }}</td>
                <td>{{ promo.nom }}</td>
                <td>
                    <ul class="nav">
                        <li class="nav-items">
                            <a class="mr-5 btn btn-sm btn-success" href="{{ path('promo_show', { 'id': promo.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-sm btn-success" href="{{ path('promo_edit', { 'id': promo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="nav">
        <li class="nav-items">
            <a class="nav-link text-white btn btn-sm btn-dark" href="{{ path('promo_new') }}">Create a new promo</a>
        </li>
    </ul>
</div>
{% endblock %}
