{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-5 bg-info">
        <h1>Formateurs list</h1>
    <table class="table table-striped table-dark w-50 mx-auto shadow p-3 mb-5 rounded">
        <thead class="bg-warning mt-2">
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Prenom</th>
                <th class="text-center">Domaine</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formateur in formateurs %}
            <tr>
                <td><a href="{{ path('formateur_show', { 'id': formateur.id }) }}">{{ formateur.id }}</a></td>
                <td>{{ formateur.nom }}</td>
                <td>{{ formateur.prenom }}</td>
                <td>{{ formateur.domaine }}</td>
                <td>
                    <ul class="nav">
                        <li class="nav-items">
                            <a class="mr-5 btn btn-sm btn-success" href="{{ path('formateur_show', { 'id': formateur.id }) }}">show</a>
                        </li>
                        <li class="nav-items">
                            <a class=" btn btn-sm btn-success" href="{{ path('formateur_edit', { 'id': formateur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <ul class="nav d-flex justify-content-around">
            <li class="nav-items">
                <a class="nav-link text-white btn btn-sm btn-dark" href="{{ path('formateur_new') }}">Create a new formateur</a>
            </li>
        </ul>
    </div>

{% endblock %}
