{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 bg-info">
    <h1>Formateur</h1>

    <table class="table table-striped table-dark w-50 mx-auto shadow p-3 mb-5 rounded">
        <tbody>
            <tr>
                <th class="text-center">Id</th>
                <td>{{ formateur.id }}</td>
            </tr>
            <tr>
                <th class="text-center">Nom</th>
                <td>{{ formateur.nom }}</td>
            </tr>
            <tr>
                <th class="text-center">Prenom</th>
                <td>{{ formateur.prenom }}</td>
            </tr>
            <tr>
                <th class="text center">Domaine</th>
                <td>{{ formateur.domaine }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="nav">
        <li class="nav-items">
            <a class="mr-5 btn btn-sm btn-success " href="{{ path('formateur_index') }}">Back to the list</a>
        </li>
        <li class="nav-items">
            <a class="mr-5 btn btn-sm btn-success " href="{{ path('formateur_edit', { 'id': formateur.id }) }}">Edit</a>
        </li>
        <li class="nav-items">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
